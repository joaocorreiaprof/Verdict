generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  email     String        @unique
  username  String        @unique 
  password  String
  name      String?
  createdAt DateTime      @default(now())
  trackedItems UserTrackedItem[]
}

enum ItemType {
  MOVIE
  SERIES
  BOOK
  GAME
}

model UserTrackedItem {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  itemId    String
  itemType  ItemType
  status    TrackingStatus @default(NOT_SEEN)
  favorite  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@unique([userId, itemId, itemType])
}

enum TrackingStatus {
  NOT_SEEN
  SEEN
  TO_SEE
}
